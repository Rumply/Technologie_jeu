<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.cegepdrummond.technologie_jeu.Propos"
    android:padding="0dp"
    android:background="@color/colorBackground">

    <TextView
        android:text="À propos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title1"
        android:textColor="@color/colorText"
        android:textSize="35sp"
        android:layout_marginTop="25sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Créateurs:\nGuillaume Hamel-Gagné\nMaxime Laflamme\nSteve Duquet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title2"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/textView_title1"
        android:layout_alignEnd="@+id/textView_title1" />

    <TextView
        android:text="Résumé du jeu:\nJeu Android de Jean dit. L'utilisateur doit réaliser les opérations demandées par le téléphone dans un temps alloué."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title3"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView_title2"
        android:layout_alignStart="@+id/textView_title2" />

    <TextView
        android:text="Technologies utilisées:\n- Capteur de proximité\n- Écran tactile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title4"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/textView_title2"
        android:layout_alignStart="@+id/textView_title3" />
</RelativeLayout>