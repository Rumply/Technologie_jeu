<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.cegepdrummond.technologie_jeu.MainActivity"
    android:padding="0dp"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title1"
        android:text="@string/msgTop_touchscreen"
        android:textColor="@color/colorText"
        android:textSize="50sp"
        android:layout_marginTop="25sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title2"
        android:text="@string/textview_title2"
        android:textColor="@color/colorText"
        android:textSize="50sp"
        android:layout_below="@+id/textView_title1"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


            <Button
                android:text="@string/BTN_jouer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_jouer"
                android:backgroundTint="@android:color/holo_blue_bright" />

            <Button
                android:text="@string/BTN_tutoriel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_tutoriel"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"/>

            <Button
                android:text="@string/BTN_a_propos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_a_propos" />

    </LinearLayout>


</RelativeLayout>
